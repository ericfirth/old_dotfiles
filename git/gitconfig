
[core]
	excludesfile = /Users/eric.firth/.gitignore_global
	editor = vim -u NONE
[user]
	name = Eric Firth
	email = eric.firth@persado.com
[init]
	templatedir = ~/.git_template
[color]
	ui = true
[push]
	default = current
[alias]
	sla = log --oneline --decorate --graph --all
	glog = log -E -i --grep
	unstage = reset
	uncommit = reset --soft HEAD^
	b = branch
	co = checkout
  favlog = "!git --no-pager log --pretty=format:'%C(blue)%h%C(reset) - %s [%C(green)%ar%C(reset)] %an'"
  omrebase = "!git fetch --all && git rebase origin/master"
  delbranch = "branch -D"
[fetch]
	prune = true
